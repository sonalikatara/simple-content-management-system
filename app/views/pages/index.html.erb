<% @page_title = "Pages" %>
<div class = "pages index">
	<h2>Pages</h2>
	<%= link_to("Add New Page", {:action => 'new'}, :class => 'action new') %>
	<table class="listings" summary="Pages list">
		<tr class="header">
			<th> &nbsp;</th>
			<th>Subject ID</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>

		<% @pages.each do |page| %>
		<tr>
			<td class="center"><%= page.position %></td>
			<td class="center"><%= page.subject_id %></td>
			<td class="center"><%= page.name %></td>
			<td class="center"><%= page.permalink %></td>
			<td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      		<td class="center"><%=  %></td>
			<td class="center">
				<%= link_to("Show", {:action => 'show' , :id => page.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit' , :id => page.id}, :class => 'action show') %>
				<%= link_to("Delete", {:action => 'delete' , :id => page.id}, :class => 'action show') %></td>
		</tr>
<% end %>
</table>
</div>

  		<h1>Simple CMS | <%= @page_title || "Admin" %></h1>
  	</div>
  	<div id="main">
  		<% if !flash[:notice].blank? %>
		  <div class="notice">
		    <%= flash[:notice] %>
		  </div>
		<% end %>
  		<div id="content">
    		<%= yield %>
    	</div>
	</div>
	<div id="footer">
		<p id="copyright">&copy; sonali katara</p>
	</div>
  </body>
</html>